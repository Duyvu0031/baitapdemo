<h1>Users List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email_address %></td>
        <td>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning btn-sm" %>

          <%= link_to "Delete Account", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this account?" }, class: "btn btn-danger" %>



        </td>
      </tr>
    <% end %>
  </tbody>
</table>
